@model OrderViewModel
@{
    ViewData["Title"] = "Sipariş Başarılı";
}

<div class="container text-center py-5">
    <!-- Başarıyla Sipariş Verildi Mesajı -->
    <div class="card shadow-lg border-0 rounded-4 p-5">
        <div class="card-body">
            <h3 class="display-5 text-success mb-4"><i class="fas fa-check-circle"></i> Siparişiniz Başarıyla Oluşturuldu!</h3>
            <p class="lead mb-4 text-muted">Siparişiniz başarıyla alındı ve işleme alındı. Teşekkür ederiz!</p>
            <p><i class="fas fa-truck"></i> Siparişiniz en kısa sürede kargoya verilecektir!</p>
                <div class="mt-5">
        <a href="@Url.Action("Index", "Order", "Shop")" class="btn btn-success btn-lg shadow rounded-pill px-5 py-3 me-3">
            <i class="fas fa-box me-2"></i> Siparişlerim
        </a>
        <a href="@Url.Action("List", "Product", "Shop")" class="btn btn-outline-primary btn-lg shadow rounded-pill px-5 py-3">
            <i class="fas fa-shopping-cart me-2"></i> Alışverişe Devam Et
        </a>
    </div>
        </div>
    </div>

    <!-- Siparişlerim Butonu ve Alışverişe Devam Et Butonu -->

</div>

<!-- Gerekli CDN'ler -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>

<!-- Bootstrap 5 CDN Linki -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>