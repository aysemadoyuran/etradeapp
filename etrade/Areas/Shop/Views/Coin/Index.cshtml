<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Toast bildirimi ba≈ülatma
        const toastEl = document.getElementById('toastNotification');
        const toastMessage = document.getElementById('toastMessage');
        const toast = new bootstrap.Toast(toastEl, { autohide: true, delay: 3000 });

        // API'den coin bilgisini al
        fetch('/Shop/Coin/GetUserCoins')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                const currentCoin = data.currentCoin || 0;

                // Coin miktarƒ±nƒ± g√∂ster
                document.getElementById('currentCoin').textContent = currentCoin;

                // Progress bar'ƒ± g√ºncelle (maksimum 200 coin √ºzerinden)
                const progressPercent = Math.min((currentCoin / 200) * 100, 100);
                document.getElementById('coinProgress').style.width = `${progressPercent}%`;

                // Hediye √ßeki kartlarƒ±nƒ± aktif/pasif yap
                const ticketCards = document.querySelectorAll('.ticket-card');
                ticketCards.forEach(card => {
                    const requiredCoin = parseInt(card.dataset.price);
                    if (currentCoin >= requiredCoin) {
                        card.classList.remove('disabled');
                        card.classList.add('active');
                        card.querySelector('.convert-btn').disabled = false;
                    }
                });
            })
            .catch(error => {
                console.error('Error fetching coin data:', error);
            });

        // Hediye √ßeki kartlarƒ±na tƒ±klama eventi
        document.querySelectorAll('.ticket-card').forEach(card => {
            const btn = card.querySelector('.convert-btn');

            btn.addEventListener('click', function (e) {
                e.stopPropagation();

                // Eƒüer buton disabled ise i≈ülem yapma
                if (this.disabled) return;

                const amount = card.dataset.amount;
                const price = card.dataset.price;
                const minOrder = card.dataset.minOrder;

                // SweetAlert ile onay s√ºreci
                Swal.fire({
                    title: `${amount}‚Ç∫ Hediye √áeki Olu≈ütur`,
                    html: `
                <div style="text-align:left; margin:15px 0;">
                    <p><b>Kupon ≈ûartlarƒ±:</b></p>
                    <ul style="padding-left:20px; margin-top:10px;">
                        <li>Kuponu <b>15 g√ºn i√ßinde</b> kullanmanƒ±z gerekmektedir</li>
                        <li>Minimum <b>${minOrder}‚Ç∫</b> deƒüerindeki sipari≈ülerde ge√ßerlidir</li>
                        <li>1 sipari≈üte 1 kupon kullanabilirsiniz</li>
                    </ul>
                    <p style="margin-top:15px;">${price} coin kar≈üƒ±lƒ±ƒüƒ±nda hediye √ßeki olu≈üturmak istiyor musunuz?</p>
                </div>
            `,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, Olu≈ütur',
                    cancelButtonText: 'Vazge√ß',
                    confirmButtonColor: '#11b76c',
                    cancelButtonColor: '#dfe6e9',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Burada API'ye istek atarak coinleri hediye √ßekine √ßevirebilirsiniz
                        fetch('/Shop/Coin/ConvertToVoucher', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                amount: amount,
                                price: price,
                                minOrder: minOrder
                            })
                        })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error('D√∂n√º≈ü√ºm ba≈üarƒ±sƒ±z');
                                }
                                return response.json();
                            })
                            .then(data => {
                                Swal.fire({
                                    title: 'Ba≈üarƒ±lƒ±!',
                                    text: `${amount}‚Ç∫ deƒüerinde hediye √ßeki olu≈üturuldu!`,
                                    icon: 'success',
                                    confirmButtonColor: '#11b76c'
                                }).then(() => {
                                    window.location.reload();
                                });
                            })
                            .catch(error => {
                                Swal.fire({
                                    title: 'Hata!',
                                    text: 'Hediye √ßeki olu≈üturulurken bir hata olu≈ütu: ' + error.message,
                                    icon: 'error',
                                    confirmButtonColor: '#11b76c'
                                });
                            });
                    }
                });
            });
        });

        // Davet kodu kopyalama butonu - D√úZELTƒ∞LMƒ∞≈û VERSƒ∞YON
        document.getElementById('copyInviteBtn').addEventListener('click', function () {
            // API'den davet kodunu al
            fetch('/Shop/Coin/GetUserCoins')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // API'den gelen veriyi log'layalƒ±m
                    console.log('API Response:', data);

                    // Eƒüer userCode var ise, kopyalama i≈ülemini yapalƒ±m
                    if (data.userCode) {
                        const inviteCode = data.userCode;
                        
                        // Alternatif kopyalama y√∂ntemi (navigator.clipboard yerine)
                        const textArea = document.createElement('textarea');
                        textArea.value = inviteCode;
                        textArea.style.position = 'fixed';  // Ekran dƒ±≈üƒ±nda tut
                        document.body.appendChild(textArea);
                        textArea.select();
                        
                        try {
                            const successful = document.execCommand('copy');
                            if (successful) {
                                toastMessage.textContent = 'Davet kodu panoya kopyalandƒ±!';
                                toast.show();
                            } else {
                                throw new Error('Kopyalama ba≈üarƒ±sƒ±z');
                            }
                        } catch (err) {
                            console.error('Kopyalama i≈ülemi ba≈üarƒ±sƒ±z: ', err);
                            toastMessage.textContent = 'Kopyalama ba≈üarƒ±sƒ±z: Tarayƒ±cƒ± izni gerekli';
                            toastEl.classList.remove('bg-success');
                            toastEl.classList.add('bg-danger');
                            toast.show();
                            setTimeout(() => {
                                toastEl.classList.remove('bg-danger');
                                toastEl.classList.add('bg-success');
                            }, 3000);
                        } finally {
                            document.body.removeChild(textArea);
                        }
                    } else {
                        console.error('Davet kodu bulunamadƒ±.');
                        toastMessage.textContent = 'Davet kodu alƒ±nƒ±rken hata olu≈ütu';
                        toastEl.classList.remove('bg-success');
                        toastEl.classList.add('bg-danger');
                        toast.show();
                        setTimeout(() => {
                            toastEl.classList.remove('bg-danger');
                            toastEl.classList.add('bg-success');
                        }, 3000);
                    }
                })
                .catch(error => {
                    console.error('Error fetching invite code:', error);
                    toastMessage.textContent = 'Davet kodu alƒ±nƒ±rken hata olu≈ütu';
                    toastEl.classList.remove('bg-success');
                    toastEl.classList.add('bg-danger');
                    toast.show();
                    setTimeout(() => {
                        toastEl.classList.remove('bg-danger');
                        toastEl.classList.add('bg-success');
                    }, 3000);
                });
        });
    });
</script>