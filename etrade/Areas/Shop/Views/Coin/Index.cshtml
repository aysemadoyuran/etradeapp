        text-align: center;
        margin-bottom: 20px;
        box-shadow: 0 10px 30px rgba(108, 92, 231, 0.3);
        position: relative;
        overflow: hidden;
    }

    .coin-card::before {
        content: '';
        position: absolute;
        top: -50px;
        right: -50px;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .coin-card::after {
        content: '';
        position: absolute;
        bottom: -80px;
        left: -80px;
        width: 250px;
        height: 250px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .coin-header {
        margin-bottom: 15px;
        position: relative;
        z-index: 1;
    }

    .coin-header h2 {
        font-weight: 600;
        font-size: 20px;
    }

    .coin-header p {
        opacity: 0.9;
        font-size: 13px;
    }

    .coin-amount {
