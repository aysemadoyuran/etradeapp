<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header border-bottom-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-primary">
                            <i class="fas fa-store-alt me-2"></i> Mağaza Ayarları
                        </h4>
                        @if (User.IsInRole("admin"))
                        {
                            <button type="submit" form="storeSettingForm" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Ayarları Kaydet
                            </button>
                        }
                    </div>
                    <p class="text-muted mb-0">Mağazanızın genel görünüm ve ödeme ayarları</p>
                </div>

                <div class="card-body pt-0">
                    <form id="storeSettingForm" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="row">
                            <!-- Logo Settings -->
                            <div class="col-lg-6">
                                <div class="card mb-4 border-0 shadow-none">
                                    <div class="card-header bg-light bg-opacity-10 border-bottom-0 py-3">
                                        <h5 class="mb-0">
                                            <i class="fas fa-image text-primary me-2"></i> Logo Ayarları
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <!-- Normal Logo -->
                                        <div class="mb-4">
                                            <label for="logoPath" class="form-label fw-semibold">Ana Logo</label>
                                            <div class="file-upload-wrapper">
                                                <input type="file" id="logoPath" class="form-control file-upload-input"
                                                    accept="image/*">
                                                <label for="logoPath"
                                                    class="file-upload-label d-flex align-items-center justify-content-between p-3 border rounded-2 mt-2 cursor-pointer">
                                                    <span class="text-muted">Logo seçin (PNG, JPG, SVG max 2MB)</span>
                                                    <i class="fas fa-cloud-upload-alt text-primary"></i>
                                                </label>
                                            </div>
                                            <div id="currentLogo" class="mt-3 text-center">
                                                <!-- Current logo will be shown here -->
                                            </div>
                                        </div>

                                        <!-- White Logo -->
                                        <div class="mb-4">
                                            <label for="logoWhitePath" class="form-label fw-semibold">Beyaz Logo (Koyu
                                                Tema)</label>
                                            <div class="file-upload-wrapper">
                                                <input type="file" id="logoWhitePath"
                                                    class="form-control file-upload-input" accept="image/*">
                                                <label for="logoWhitePath"
                                                    class="file-upload-label d-flex align-items-center justify-content-between p-3 border rounded-2 mt-2 cursor-pointer">
                                                    <span class="text-muted">Beyaz logo seçin (PNG, JPG, SVG max
                                                        2MB)</span>
                                                    <i class="fas fa-cloud-upload-alt text-primary"></i>
                                                </label>
                                            </div>
                                            <div id="currentLogoWhite" class="mt-3 text-center">
                                                <!-- Current white logo will be shown here -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Payment Settings -->
                            <div class="col-lg-6">
                                <div class="card mb-4 border-0 shadow-none">
                                    <div class="card-header bg-light bg-opacity-10 border-bottom-0 py-3">
                                        <h5 class="mb-0">
                                            <i class="fas fa-credit-card text-primary me-2"></i> Ödeme Ayarları
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <!-- Iyzico API Key -->
                                        <div class="mb-3">
                                            <label for="iyzicoApiKey" class="form-label fw-semibold">Iyzico API
                                                Key</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i
                                                        class="fas fa-key text-primary"></i></span>
                                                <input type="text" id="iyzicoApiKey" class="form-control"
                                                    placeholder="API anahtarınızı girin">
                                            </div>
                                        </div>

                                        <!-- Iyzico Secret Key -->
                                        <div class="mb-3">
                                            <label for="iyzicoSecretKey" class="form-label fw-semibold">Iyzico Secret
                                                Key</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i
                                                        class="fas fa-lock text-primary"></i></span>
                                                <input type="text" id="iyzicoSecretKey" class="form-control"
                                                    placeholder="Gizli anahtarınızı girin">
                                            </div>
                                        </div>

                                        <!-- Iyzico Base URL -->
                                        <div class="mb-3">
                                            <label for="iyzicoBaseUrl" class="form-label fw-semibold">Iyzico Base
                                                URL</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i
                                                        class="fas fa-link text-primary"></i></span>
                                                <input type="text" id="iyzicoBaseUrl" class="form-control"
                                                    placeholder="API endpoint URL">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    :root {
        --primary-color: #6366f1;
        --primary-light: #e0e7ff;
        --secondary-color: #f43f5e;
        --dark-color: #1e293b;
        --light-color: #f8fafc;
        --border-color: #e2e8f0;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }

    .file-upload-wrapper {
        position: relative;
    }

    .file-upload-input {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .file-upload-label {
        transition: all 0.3s ease;
    }

    .file-upload-label:hover {
        border-color: var(--primary-color);
    }

    .form-control,
    .input-group-text {
        border-radius: 8px;
    }

    .input-group-text {
        min-width: 45px;
        justify-content: center;
    }

    .rounded-lg {
        border-radius: 16px;
    }

    .shadow-sm {
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05), 0 1px 2px 0 rgba(0, 0, 0, 0.03);
    }

    .fw-semibold {
        font-weight: 600;
    }

    .cursor-pointer {
        cursor: pointer;
    }
</style>

<script>
    $(document).ready(function () {
        // 1. StoreSetting bilgilerini çekme
        function fetchStoreSetting() {
            $.ajax({
                url: '/Admin/StoreSettings/GetStoreSetting',
                method: 'GET',
                beforeSend: function () {
                    // Loading state eklenebilir
                },
                success: function (response) {
                    if (response.isSuccess) {
                        // Formdaki alanlara veriyi yerleştiriyoruz

                        $('#iyzicoBaseUrl').val(response.data.iyzicoBaseUrl || '');

                        // Mevcut logoları formda gösteriyoruz
                        if (response.data.logoPath) {
                            $('#currentLogo').html(`
                                <div class="d-flex flex-column align-items-center">
                                    <p class="text-muted small mb-2">Mevcut Logo</p>
                                    <img src="${response.data.logoPath}" alt="Logo" class="img-thumbnail" style="max-width: 200px; max-height: 100px; object-fit: contain;">
                                </div>
                            `);
                        }

                        if (response.data.logoWhitePath) {
                            $('#currentLogoWhite').html(`
        <div class="d-flex flex-column align-items-center" style="background-color: white; padding: 10px; border-radius: 5px;">
            <p class="text-muted small mb-2">Mevcut Beyaz Logo</p>
            <img src="${response.data.logoWhitePath}" alt="Beyaz Logo" class="img-thumbnail" style="max-width: 200px; max-height: 100px; object-fit: contain; background-color:black">
        </div>
    `);
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata',
                            text: 'StoreSetting bilgileri alınamadı.'
                        });
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata',
                        text: 'Bir hata oluştu: ' + (xhr.responseJSON?.message || 'Sunucu hatası')
                    });
                }
            });
        }

        // 2. Güncelleme işlemi
        $('#storeSettingForm').submit(function (e) {
            e.preventDefault();

            var formData = new FormData();
            formData.append("logoPath", $('#logoPath')[0].files[0]);
            formData.append("logoWhitePath", $('#logoWhitePath')[0].files[0]);
            formData.append("iyzicoApiKey", $('#iyzicoApiKey').val());
            formData.append("iyzicoSecretKey", $('#iyzicoSecretKey').val());
            formData.append("iyzicoBaseUrl", $('#iyzicoBaseUrl').val());

            $.ajax({
                url: '/Admin/StoreSettings/UpdateStoreSetting',
                method: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                beforeSend: function () {
                    // Loading butonu durumu
                    $('button[type="submit"]').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i> Kaydediliyor...');
                },
                success: function (response) {
                    if (response.isSuccess) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Başarılı',
                            text: response.message || 'Ayarlar başarıyla güncellendi',
                            timer: 2000,
                            showConfirmButton: false
                        });

                        // Formu resetlemeden sadece görseli güncelle
                        fetchStoreSetting();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata',
                            text: response.message || 'Güncelleme işlemi başarısız oldu'
                        });
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata',
                        text: 'Bir hata oluştu: ' + (xhr.responseJSON?.message || 'Sunucu hatası')
                    });
                },
                complete: function () {
                    $('button[type="submit"]').prop('disabled', false).html('<i class="fas fa-save me-1"></i> Ayarları Kaydet');
                }
            });
        });

        // Dosya seçildiğinde önizleme göster
        $('#logoPath, #logoWhitePath').change(function () {
            const file = this.files[0];
            const previewId = this.id === 'logoPath' ? '#currentLogo' : '#currentLogoWhite';

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    $(previewId).html(`
                        <div class="d-flex flex-column align-items-center">
                            <p class="text-muted small mb-2">Yeni Logo Önizleme</p>
                            <img src="${e.target.result}" alt="Logo Preview" class="img-thumbnail" style="max-width: 200px; max-height: 100px; object-fit: contain;">
                        </div>
                    `);
                }
                reader.readAsDataURL(file);
            }
        });

        // Sayfa yüklendiğinde StoreSetting bilgilerini çekiyoruz
        fetchStoreSetting();
    });
</script>