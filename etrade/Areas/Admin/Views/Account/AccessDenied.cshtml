@model etrade.Models.LoginViewModel
@{
    Layout = null; 
}
<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Yetkisiz Giriş | E-Ticaret</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Yetkisiz giriş sayfası" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="/temp/reback/admin/assets/images/favicon.ico" />

    <!-- Styles -->
    <link href="/temp/reback/admin/assets/css/vendor.min.css" rel="stylesheet" type="text/css" />
    <link href="/temp/reback/admin/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/temp/reback/admin/assets/css/app.min.css" rel="stylesheet" type="text/css" />

    <!-- Custom Styles -->
    <style>
        .error-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
            color: #ffffff;
        }
        .error-box {
            background: rgba(0, 0, 0, 0.8);
            padding: 40px;
            border-radius: 10px;
            max-width: 500px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        h1 {
            font-size: 80px;
            font-weight: bold;
            color: #ff4b5c;
        }
        h3 {
            font-size: 22px;
            margin-bottom: 20px;
        }
        .btn-custom {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            font-weight: bold;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }
        .btn-home {
            background: #007bff;
            color: white;
            border: none;
        }
        .btn-home:hover {
            background: #0056b3;
        }
        .btn-login {
            background: #28a745;
            color: white;
            border: none;
        }
        .btn-login:hover {
            background: #218838;
        }
    </style>
</head>

<body class="authentication-bg" style="background: url('/temp/reback/admin/assets/images/background.jpg') no-repeat center center; background-size: cover;">
    <div class="error-container">
        <div class="error-box">
            <h1>403</h1>
            <h3 style="color: #ffffff;">Bu sayfaya erişim yetkiniz bulunmamaktadır.</h3>
            <p>Lütfen yetkili bir kullanıcı ile giriş yapın veya ana sayfaya dönün.</p>
            <div class="mt-3">
                <a href="/" class="btn btn-custom btn-home">Ana Sayfa</a>
                <a href="/Account/Login" class="btn btn-custom btn-login">Giriş Yap</a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/temp/reback/admin/assets/js/vendor.js"></script>
    <script src="/temp/reback/admin/assets/js/app.js"></script>
</body>
</html>
