@model ShippingFeeViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-gradient-primary text-white py-3 border-0 rounded-top-3">
                    <h2 class="mb-0 text-center">Kargo Ücreti Yönetimi</h2>
                </div>
                
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Kargo Ücreti (₺)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-truck"></i>
                                </span>
                                <input asp-for="ShippingFee" class="form-control form-control-lg" placeholder="Kargo ücreti giriniz" />
                            </div>
                            <span asp-validation-for="ShippingFee" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3 fw-bold">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer bg-light text-muted text-center py-3 rounded-bottom-3">
                    <small>Son güncelleme: @DateTime.Now.ToString("f")</small>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .card {
            transition: transform 0.3s ease;
            border: none;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .form-control-lg {
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
        }
        
        .btn-lg {
            font-size: 1.1rem;
            letter-spacing: 0.5px;
        }
    </style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Bootstrap 5 validation
        (function () {
            'use strict'
            
            var forms = document.querySelectorAll('.needs-validation')
            
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}